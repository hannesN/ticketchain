<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Wallet 1: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/wallet1IdLabel"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Wallet 2: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/wallet2IdLabel"/>

    </LinearLayout>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/guideline"/>
    <Button
            android:text="send Transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sendTransactionButton"/>
    <Button
            android:text="Create Address for Wallet 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/createWallet1Address"/>
    <Button
            android:text="Create Address for Wallet 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/createWallet2Address"/>
    <Button
            android:text="Log all Transactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/listAllTransactionsButton"/>

</LinearLayout>